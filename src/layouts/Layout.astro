---
import Navbar from "../components/Navbar.astro";
// import Light from "../components/decorations/Light.astro";
import "../styles/global.css";

import mz_logo from "../assets/images/pageimages/logo.svg?raw";

interface Props {
  title: string;
}
const today = new Date();

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="flex flex-col min-h-screen bg-amber-50 mx-4 sm:mx-[9.5rem]">
    <Navbar />
    <main class="flex-grow mb-20 md:mb-40">
      <slot />
    </main>
    <footer class="w-full py-4 text-center mt-auto">
      <hr class="border-gray-400 mb-3" />
      <div class="flex flex-row justify-between mb-3">
        <div
          class="flex flex-col text-sm text-gray-700 font-normal text-left"
        >
          <span>&copy; {today.getFullYear()} Forr√≥ da Capita. </span>
          <span>All rights reserved.</span>
        </div>

        <div>
          <a href="https://macozu.github.io" class="font-semibold">
            <div class="flex flex-row gap-x-3 items-center">
              <div
                class="flex flex-col text-sm text-gray-700 font-normal text-right"
              >
                <span>Code, Graphics & Photo</span>
                <span>Marco Zausch</span>
              </div>
              <div class="w-9 h-9">
                <Fragment set:html={mz_logo} />
              </div>
            </div>
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>
