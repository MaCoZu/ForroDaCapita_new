---
import Navbar from "../components/Navbar.astro";
// import Light from "../components/decorations/Light.astro";
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";

interface Props {
    title: string;
}
const today = new Date();

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>

        <ClientRouter />
    </head>
    <body class="flex flex-col min-h-screen bg-amber-50 mx-4 sm:mx-[9.5rem]">
        <Navbar />
        <!-- <Light /> -->
        <main class="flex-grow mb-20 md:mb-40">
            <slot />
        </main>
        <footer class="w-full py-4 text-center mt-auto">
            <hr class="border-gray-400 mb-6" />
            <div class="flex flex-row justify-between">
                <div class="">
                    &copy; {today.getFullYear()} Forr√≥ da Capita. All rights reserved.
                </div>
                <div class="text-sm mb-5">
                    Webdesign & Graphics: <a
                        href="https://macozu.github.io"
                        class="text-indigo-900 hover:text-indigo-700 font-semibold"
                        >Marco Zausch</a
                    >
                </div>
            </div>
        </footer>
    </body>
</html>
